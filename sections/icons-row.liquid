{% comment %}  
Icons row
{% endcomment %}

{% include 'icons-row' %}

{% schema %}
{
  "name": "Icons row",
  "max_blocks": 6,
  "class": "icons-row",
  "settings": [
    {
      "type": "color",
      "id": "color_icons_bg",
      "label": "Background color",
      "default": "#fafafa"
    },
    {
      "type": "color",
      "id": "color_icons_text",
      "label": "Text color",
      "default": "#333"
    },
 {
      "type": "color",
      "id": "color_icons_text1",
      "label": "Text color sub",
      "default": "#333"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon name",
          "default": "Shop",
          "info": "[Click here](https://iconsmind.com/view_icons/) to view the list of available icons. Example: Shop"
        },
        {
          "type": "text",
          "id": "icon_url",
          "label": "Icon URL",
		  "info": "This will only show if Icon Name is blank.",
          "default": "https://cdn.shopify.com/s/files/1/2926/6108/t/13/assets/Lifeguard-Icon.png"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Feature"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "default": "Modular is a powerful Shopify theme that will set you apart from the rest with Mosaic, Gallery, and Slideshow sections."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icons row",
      "category": "Text",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "text"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
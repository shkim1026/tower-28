{% comment %} Settings {% endcomment %}
{% assign collection1 = collections[section.settings.collection1] | default: false %}
{% assign title = section.settings.title %}

{% comment %} Layout {% endcomment %}
{% assign rows = section.settings.rows | plus: 0 %}

{% assign productsRows = section.settings.products_rows | plus: 0 %}
{% assign productsColumns = section.settings.products_columns | plus: 0 %}
{% assign productLimit = productsColumns | times: productsRows %}
{% assign columnsSize = productsColumns | replace: '1', '' %}
{% assign color_swatches = section.settings.color_swatches %}
{% assign show_reviews = section.settings.show_reviews %}

{% comment %} Section {% endcomment %}
<section class="collectionGrid container-wrap js-collection-grid js-collectionGrid" id="collection-module-{{ section.id }}" data-section-type="featured-collection" data-show-quickview="{{ section.settings.showQuickView }}" data-show_reviews="{{ show_reviews }}" data-show_quantity="{{ section.settings.show_quantity }}" data-color_swatches="{{ color_swatches }}">
    <div class="collectionGrid-header row row-sm">
        {% if title != blank %}
            <div class="block s1">
                <h1>{{ title }}</h1>
            </div>
        {% endif %}
    </div>

    <div class="collectionGrid-row row row-lg inline">
        {% comment %} Collection Block, contains .js-quickView {% endcomment %}
        {% if collection1 %}
            {% for product in collection1.products limit: productLimit  %}
                {% include 'collectionGrid-block' %}
            {% endfor %}
        {% else %}
            {% for i in (1..productLimit) %}
                {% include 'collectionGrid-block', fallback: true %}
            {% endfor %}
        {% endif %}

        {% comment %} Spacers for inline-block based collectionGrid {% endcomment %}
        {% for i in (1..3) %}
          <div class="gridSpacer item block s1 sm_s12 lg_s1{{ columnsSize }}"></div>
        {% endfor %}
    </div>

{% if section.settings.showShopAllButton %}
    {% comment %} Shop All Link {% endcomment %}
    <div class="row row-med inline u-center">
        <a href="{{ collection1.url }}" class="button inline">
            {{ 'collections.grid.shop_all' | t }} {{ collection1.title }}
        </a>
    </div>
{% endif %}

</section>

{% comment %} Schema {% endcomment %}
{% schema %}
    {
  "name": "Featured collection",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "collection",
      "id": "collection1",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "rows",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Rows",
      "default": 3
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
        "type": "range",
        "id": "products_rows",
        "label": "Products rows",
        "default":3,
        "min":1,
        "max":4,
        "step":1
    },
    {
        "type": "range",
        "id": "products_columns",
        "label": "Products per row",
        "default":4,
        "min":1,
        "max":5,
        "step":1
    },
    {
      "type": "checkbox",
      "id": "hover_image",
      "label": "Show second product image on hover",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "price_hover",
      "label": "Show price on hover (desktop only)",
      "default": false
    },
    { 
      "type": "checkbox",
      "id": "color_swatches",
      "label": "Enable color swatches",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "showShopAllButton",
      "label": "Show SHOP ALL button",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "showQuickView",
      "label": "Show Quick View button",
      "info":"Desktop only",
      "default": true
    },
    { 
      "type": "checkbox",
      "id": "show_quantity",
      "label": "Show quantity ticker",
      "info":"On the Quick View section",
      "default": true
    },
    {
      "type": "header",
      "content": "Reviews",
      "info": "You need to install Shopify's free [Product Reviews app](https://apps.shopify.com/product-reviews) before enabling this option."
    },
    {
      "type": "checkbox",
      "id": "show_reviews",
      "label": "Enable",
      "default": true
    }
  ],
  "presets": [
    {
      "category": "Collection",
      "name": "Featured collection",
      "settings": {
        "collection1": "frontpage"
      }
    }
  ]
}
{% endschema %}